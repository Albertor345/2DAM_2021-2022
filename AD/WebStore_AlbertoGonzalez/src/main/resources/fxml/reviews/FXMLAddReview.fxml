        </ComboBox>
        <Label layoutX="402.0" layoutY="129.0" text="Title"/>
        <TextField fx:id="titleBox" layoutX="399.0" layoutY="143.0" prefHeight="25.0" prefWidth="181.0"/>
    </children>
</AnchorPane>
