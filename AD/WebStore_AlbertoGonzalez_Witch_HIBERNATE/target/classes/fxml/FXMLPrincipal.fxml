<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane id="AnchorPane" fx:id="fxRoot" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="fx.controllers.FXMLPrincipalController">
    <top>
        <MenuBar fx:id="fxMenuTop" BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Options">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#chargeLogin" text="Go back to login"/>
                        <MenuItem mnemonicParsing="false" onAction="#chargeWelcome" text="Welcome Pane"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Items">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#chargeListItems" text="List items"/>
                        <MenuItem mnemonicParsing="false" onAction="#chargeAddItems" text="Add Item" fx:id="topMenuAddItem"/>
                        <MenuItem mnemonicParsing="false" text="Find by ID" onAction="#chargeFindItemsByID" fx:id="topMenuFindItemByID"/>
                        <MenuItem mnemonicParsing="false" onAction="#chargeDeleteItems" text="Delete Item" fx:id="topMenuDeleteItems"/>
                        <MenuItem mnemonicParsing="false" text="Update Item" onAction="#chargeUpdateItems" fx:id="topMenuUpdateItems"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Customers" fx:id="topMenuCustomers">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#chargeAddCustomer" text="Add Customer"/>
                        <MenuItem mnemonicParsing="false" onAction="#chargeFindCustomer" text="Find by ID"/>
                        <MenuItem mnemonicParsing="false" onAction="#chargeDeleteCustomer" text="Delete Customer"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Purchases">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#chargePurchases" text="Add Purchase"/>
                        <MenuItem mnemonicParsing="false" onAction="#chargeDatePurchases" text="Find by Date" fx:id="topMenuFindByDate"/>
                        <MenuItem mnemonicParsing="false" onAction="#chargeDeletePurchases" text="Delete Purchase" fx:id="topMenuDeletePurchases"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Reviews">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#chargeAddReview" text="Add review"/>
                        <MenuItem mnemonicParsing="false" onAction="#chargeFindReview" text="Find by Item"/>
                        <MenuItem mnemonicParsing="false" onAction="#chargeDeleteReview" text="Delete Review"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
</BorderPane>
